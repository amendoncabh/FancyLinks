<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_fancylinks</name>
	<author>Buyanov Danila</author>
	<creationDate>December 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 Buyanov Danila. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@saity74.ru</authorEmail>
	<authorUrl>www.saity74.ru</authorUrl>
	<version>0.9</version>
	<description>PLG_FANCYLINKS_DESC</description>
	<files>
		<filename plugin="fancylinks">fancylinks.php</filename>
		<filename>index.html</filename>
	</files>
        <languages folder="language">
                <language tag="en-GB">en-GB/en-GB.plg_system_fancylinks.ini</language>
                <language tag="en-GB">en-GB/en-GB.plg_system_fancylinks.sys.ini</language>
                <language tag="ru-RU">ru-RU/ru-RU.plg_system_fancylinks.ini</language>
                <language tag="ru-RU">ru-RU/ru-RU.plg_system_fancylinks.sys.ini</language>
        </languages>
        <config>
	  <fields name="params">
	    <fieldset name="basic">
                
				<field name="forcecss" type="radio"
					default="0"
					description="PLG_SYSTEM_FANCYLINKS_FORCECSS_DESC"
					label="PLG_SYSTEM_FANCYLINKS_FORCECSS_LABEL"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
				<field name="ignore" type="text"
					label="PLG_SYSTEM_FANCYLINKS_IGNORECLASS_LABEL" description="PLG_SYSTEM_FANCYLINKS_IGNORECLASS_DESC"
					class="inputbox"/>
					
				<field name="extlist" type="textarea"
					label="PLG_SYSTEM_FANCYLINKS_EXTLIST_LABEL" description="PLG_SYSTEM_FANCYLINKS_EXTLIST_DESC"
					class="inputbox" rows="10" cols="30"/>
							
				
            </fieldset>
          </fields>
        </config>
        <updateservers>
		<server type="extension" name="Fancy Links">http://saity74.ru/updates/fancylinks/extension.xml</server>
	</updateservers>
</extension>
